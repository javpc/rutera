<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="pc.javier.actualizadoropendns.ActividadAyuda">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "@string/app_name"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="20dp"
                />


                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "VersiÃ³n 1"
                android:id="@+id/version"
                android:textAlignment="center"
                android:padding="5dp"
                />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_firma"
                android:id="@+id/ayuda_firma"
                android:textAlignment="center"
                android:padding="5dp"
                />

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "@string/traducidopor"

            android:textAlignment="center"
                android:padding="5dp"
            />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_donacion"
                android:id="@+id/ayuda_donacion"
                android:padding="5dp"
                />



            <Button
                android:text="@string/sitioweb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:onClick="sitio"

                android:background="@drawable/botonredondeado"
                android:textColor="@android:color/white"
                android:layout_margin="5dp"
                />


            <Button
                android:text="@string/dona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:onClick="donar"
                android:background="@drawable/botonredondeado"
                android:textColor="@android:color/white"
                android:layout_margin="5dp"
                />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_ayuda_descripcion"
                android:id="@+id/ayuda_descripcion"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_licencia"
                android:id="@+id/ayuda_licencia"
                android:padding="5dp"
                />





            </LinearLayout>

        </ScrollView>



</android.support.constraint.ConstraintLayout>
